<div class="room-detail-container">
  <!-- 戻るリンク -->
  <div class="room-detail-back">
    <%= link_to "← 戻る", rooms_path, class: "room-back-link" %>
  </div>

  <!-- 詳細ページの内容 -->
  <div class="room-detail-content">
    <!-- 左側: 画像 -->
    <div class="room-detail-image">
      <% if @room.image.attached? %>
        <%= image_tag @room.image, class: "room-image-large" %>
      <% end %>
    </div>

    <!-- 右側: 詳細情報 -->
    <div class="room-detail-info">
      <div class="room-header">
        <h1 class="room-name"><%= @room.name %></h1>
        <p class="room-price">¥<%= @room.price %>/日</p>
      </div>
      <p class="room-address"><%= @room.address %></p>
      <p class="room-description"><%= @room.description %></p>

      <!-- 予約フォーム -->
      <%= form_with url: room_reservations_path(@room), method: :post, local: true, class: "room-reservation-form" do |f| %>
        <div class="reservation-fields">
          <div class="reservation-field">
            <%= f.label :check_in, "チェックイン日時" %>
            <%= f.datetime_select :check_in, class: "reservation-input" %>
          </div>
          <div class="reservation-field">
            <%= f.label :check_out, "チェックアウト日時" %>
            <%= f.datetime_select :check_out, class: "reservation-input" %>
          </div>
          <div class="reservation-field">
            <%= f.label :guests, "人数" %>
            <%= f.number_field :guests, min: 1, value: 1, class: "reservation-input" %>
          </div>
        </div>
        <div class="reservation-submit">
          <%= f.submit "予約する", class: "reservation-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
