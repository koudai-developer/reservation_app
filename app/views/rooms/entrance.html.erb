<div class="entrance">

  <!-- ファーストビュー -->
  <section class="entrance-hero">
    <div class="entrance-hero-text">
      <h1>ReservationAppで新しい旅へ</h1>
    </div>
    <div class="entrance-search">
      <form action="/rooms/search" method="get">
        <input type="text" name="query" placeholder="行き先を検索" class="entrance-search-input">
        <button type="submit" class="entrance-search-button">検索</button>
      </form>
    </div>
  </section>

  <!-- おすすめエリア -->
