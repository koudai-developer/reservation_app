<div class="entrance">

  <!-- ファーストビュー -->
  <section class="entrance-hero">
    <div class="entrance-hero-text">
      <h1>ReservationAppで新しい旅へ</h1>
    </div>
    <div class="entrance-search">
      <%= form_with url: rooms_path, method: :get, local: true, class: "rooms-search-form" do %>
        <%= text_field_tag :area, params[:area], placeholder: "エリア名で検索", class: "entrance-search-input" %>
        <%= submit_tag "検索", class: "entrance-search-button" %>
      <% end %>
    </div>
  </section>

  <!-- おすすめエリア -->
  <section class="entrance-areas">
  <h2>おすすめエリア</h2>
  <div class="entrance-area-list">
    <div class="entrance-area-item">
      <a href="<%= rooms_path(area: '東京') %>" class="entrance-area-link">
        <div class="entrance-area-image" style="background-image: url('/assets/tokyo.jpg')">
          <span class="entrance-area-name">東京</span>
        </div>
      </a>
    </div>
    <div class="entrance-area-item">
      <a href="<%= rooms_path(area: '大阪') %>" class="entrance-area-link">
        <div class="entrance-area-image" style="background-image: url('/assets/osaka.jpg')">
          <span class="entrance-area-name">大阪</span>
        </div>
      </a>
    </div>
    <div class="entrance-area-item">
      <a href="<%= rooms_path(area: '京都') %>" class="entrance-area-link">
        <div class="entrance-area-image" style="background-image: url('/assets/kyoto.jpg')">
          <span class="entrance-area-name">京都</span>
        </div>
      </a>
    </div>
    <div class="entrance-area-item">
      <a href="<%= rooms_path(area: '札幌') %>" class="entrance-area-link">
        <div class="entrance-area-image" style="background-image: url('/assets/saporo.jpg')">
          <span class="entrance-area-name">札幌</span>
        </div>
      </a>
    </div>
  </div>
  </section>

</div>