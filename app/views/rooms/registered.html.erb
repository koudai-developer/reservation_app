<div class="registered-container">
  <!-- タイトル -->
  <h1 class="registered-title">登録済み一覧</h1>

  <!-- テーブル形式で施設一覧を表示 -->
  <table class="registered-table">
    <thead>
      <tr>
        <th class="table-header">画像</th>
        <th class="table-header">施設名</th>
        <th class="table-header">紹介文</th>
        <th class="table-header">料金 (1日)</th>
        <th class="table-header">作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr class="registered-row" onclick="location.href='<%= room_path(room) %>'">
          <td class="table-cell">
            <% if room.image.attached? %>
              <%= image_tag room.image, class: "table-image" %>
            <% else %>
              <%= image_tag "default-image.png", class: "table-image" %>
            <% end %>
          </td>
          <td class="table-cell"><%= room.name %></td>
          <td class="table-cell"><%= truncate(room.description, length: 50) %></td>
          <td class="table-cell">¥<%= room.price %></td>
          <td class="table-cell"><%= room.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
