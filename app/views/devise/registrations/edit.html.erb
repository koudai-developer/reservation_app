<div class="devise-container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "devise-form" }) do |f| %>
    <h2 class="devise-title">アカウント設定</h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- メールアドレスフィールド -->
    <div class="devise-field">
      <%= f.label :email, "メールアドレス", class: "devise-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-input" %>
    </div>

    <!-- パスワードフィールド -->
    <div class="devise-field">
      <%= f.label :password, "新しいパスワード", class: "devise-label" %>
      <% if @minimum_password_length %>
        <em class="devise-note">(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "devise-input" %>
    </div>

    <!-- パスワード確認フィールド -->
    <div class="devise-field">
      <%= f.label :password_confirmation, "パスワード確認", class: "devise-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-input" %>
    </div>

    <!-- 現在のパスワードフィールド -->
    <div class="devise-field">
      <%= f.label :current_password, "現在のパスワード", class: "devise-label" %>
      <em class="devise-note">(変更を保存するために必要です)</em><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "devise-input" %>
    </div>

    <!-- 保存ボタン -->
    <div class="devise-actions">
      <%= f.submit "更新", class: "devise-button-primary" %>
    </div>

    <div class="devise-links">
      <%= link_to "キャンセル", :back, class: "devise-login-link" %>
    </div>

  <% end %>

</div>
